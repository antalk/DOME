INIT_SCR:
	LD	A,80	; nog geen BIOS voorhanden
	LD	(&HF3AE),A
	LD	A,0	; SCREEN 0   
	LD	IY,(&HFCC1)
	LD	IX,&H5F
	CALL	&H1C

	LD	HL,2048
	LD	B,10
INIT_SCR_LOOP:
	LD	A,255
	LD	IY,(&HFCC1)
	LD	IX,&H4D
	CALL	&H1C
	INC	HL
	DJNZ	INIT_SCR_LOOP

	DI
	LD	A,15*16+8
	OUT	(&H99),A
	LD	A,128+12
	OUT	(&H99),A

	LD	A,16*5
	OUT	(&h99),A
	LD	A,128+13
	OUT	(&h99),A
	EI

	RET
CHK_MSX:
	LD	HL,TXT_MSX_TYPE
	CALL	PUT_TXT

	LD	HL,TXT_MSX_1
	OR	A
	CALL	Z,PUT_TXT

	LD	HL,&H002D
	LD	A,(&HFCC1)
	CALL	&H0C

	LD	HL,TXT_MSX_2
	CP	1
	JP	Z,PUT_TXT

	LD	HL,TXT_MSX_2P
	CP	2
	JP	Z,PUT_TXT

	LD	HL,TXT_MSX_TR
	CP	3
	JP	Z,PUT_TXT

	LD	HL,TXT_MSX_ON
	JP	PUT_TXT

