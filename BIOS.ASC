	ORG	&H0100
ST:
	JP	START

	DB	&H0D	; type dome.com

	DB	"DOME (c) 1998 PARAGON Productions",&H0D,&H0A
	DB	&H1A	; Einde txt

	ORG	&HC000	; after bios

START:
	CALL	INIT_SCR	; SCREEN 0-80  + ROODE BALK  
	LD	HL,FILE0	; DOME BIOS 
	LD	A,0	; header 0 
	LD	BC,&H0EFF	;  ! > 16 Kb 
	LD	DE,&H0100	; adr 
	CALL	LOAD_FILE

	LD	HL,INT_DOS
	CALL	GET_INT

	LD	HL,RET
	CALL	PUT_TXT

	CALL	CHK_MSX	; MSX 2 OF HIGHER  

	LD	HL,FILE1
	LD	A,0
	LD	BC,&H3FFF
	LD	DE,&H4000
	CALL	LOAD_FILE

	LD	HL,&H4000	; ADR IN RAM  
	LD	A,0	; PAGE (VRAM IN 64 KB) 
	LD	DE,&H8000	; DE IN VRAM 
	CALL	POP.UP_START

	LD	HL,FILE2
	LD	A,0
	LD	BC,&H3FFF
	LD	DE,&H4000
	CALL	LOAD_FILE

	LD	HL,&H4000	; ADR IN RAM   
	LD	A,1	; PAGE (VRAM IN 64 KB)  
	LD	DE,&H0000	; DE IN VRAM  
	CALL	POP.UP_START

	LD	HL,FILE3
	LD	A,0
	LD	BC,&H3FFF
	LD	DE,&H4000
	CALL	LOAD_FILE

	LD	HL,&H4000	; ADR IN RAM   
	LD	A,1	; PAGE (VRAM IN 64 KB)  
	LD	DE,&H8000	; DE IN VRAM   
	CALL	POP.UP_START

	LD	HL,FILE4	; DOME Engine 
	LD	A,0	; header 0 
	LD	BC,&H4FFF	;  ! > 16 Kb 
	LD	DE,&H3000	; adr 
	CALL	LOAD_FILE

	LD	HL,FILE5	; Tank tabel 
	LD	A,0
	LD	BC,&H1FFF
	LD	DE,&H1000
	CALL	LOAD_FILE

	LD	HL,FILE6	; VELD
	LD	A,7	; is nog een BIN file
	LD	BC,&H3FFF
	LD	DE,&H8000	; van 8000-bfff ???
	CALL	LOAD_FILE

	HALT
	HALT

	CALL	SET_SCREEN5

	LD	HL,COLOR_DOME_GAME	; restore color  
	CALL	PUT_COLOR

	LD	A,(&HF3E0)	; screen5,2  
	OR	&B00000010
	LD	(&HF3E0),A
	DI
	OUT	(&H99),A
	LD	A,129	; REG 1   
	OUT	(&H99),A
	EI

	LD	HL,SPRTAB	; maak sprites  
	CALL	MAK_SPR

	LD	HL,COPY_1_0
	CALL	PUTBLK

	DI		; >>> ????  
	CALL	&H3000	; GO GAME !

	DI
	LD	HL,INT_DOS
	CALL	PUT_INT
	CALL	SET_SCREEN0
	EI

	LD	C,0	; officieel !!!!!
	CALL	DOS
	RET

